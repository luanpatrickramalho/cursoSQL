/* realizando consultas*/
 SELECT * 
   FROM aluno
  WHERE ID = 1;

 /* atualizando os dados contidos na tabela alunos*/
 UPDATE aluno
 SET nome = 'Luan',
	cpf = '10987654321',
	observacao ='Teste',
	idade = 38,
	dinheiro = 15.32,
	altura = 1.90,
	ativo = FALSE,
	data_nascimento = '1980-01-15',
	hora_aula = '13:00:00',
	matriculado_em = '2020-01-02 15:00:00'
  WHERE id = 1;
  
  
 SELECT *  FROM aluno ;
/* realizando consultas na tabela aluno onde o nome é Luan*/
SELECT * 
   FROM aluno
  WHERE nome = 'Luan';
/*Apagando o registro de nome igual a Luan*/
DELETE 
   FROM aluno
  WHERE nome = 'Luan';
/*Apagando o banco de dados teste*/
DROP DATABASE teste;

